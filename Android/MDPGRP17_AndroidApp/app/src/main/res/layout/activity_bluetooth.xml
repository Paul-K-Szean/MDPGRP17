<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_grey"
            android:paddingBottom="@dimen/md_keylines"
            android:paddingTop="@dimen/md_keylines"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/layout_BTAct_Top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/md_keylines"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/md_keylines"
                android:paddingRight="@dimen/md_keylines">

                <TextView
                    android:id="@+id/bluetooth_onoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bluetooth"
                    android:textSize="@dimen/article_titles"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/toggle_bluetooth_onoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="ToggleButton" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_BTAct_Bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_BTAct_Top"
                android:layout_marginBottom="@dimen/md_keylines"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/md_keylines"
                android:paddingRight="@dimen/md_keylines">

                <TextView
                    android:id="@+id/devices_nearby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Devices"
                    android:textSize="@dimen/article_titles"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listView_BTDeviceList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/devices_nearby" />


            </RelativeLayout>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>


</android.support.v4.widget.DrawerLayout>
